<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.shop.ShopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/normal_100"
                android:layout_marginEnd="@dimen/normal_100"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_close_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_close_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_100"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/transaction"
                    android:textColor="@color/black" />


            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/normal_100"
            app:cardElevation="@dimen/small_50"
            android:layout_marginStart="@dimen/small_100"
            android:layout_marginEnd="@dimen/small_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_course_home_height"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/normal_100">

                    <ImageView
                        android:id="@+id/iv_material"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image_login"
                        android:adjustViewBounds="true"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/large_100"
                        android:layout_marginTop="@dimen/normal_100"
                        android:layout_marginEnd="@dimen/normal_125"
                        android:text="Saldo Anda: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/h6"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h6"
                        android:layout_marginTop="@dimen/normal_100"/>

                    <TextView
                        android:id="@+id/tex_view_ph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_100"
                        android:fontFamily="sans-serif-medium"
                        android:text="500000"
                        android:textColor="@color/independece"
                        android:textSize="@dimen/normal_100"
                        tools:ignore="SpUsage" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/large_100"
                        android:layout_marginTop="@dimen/normal_100"
                        android:layout_marginBottom="@dimen/normal_100"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wallet2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_100"
                            android:layout_marginTop="@dimen/normal_75"
                            android:fontFamily="sans-serif-medium"
                            android:text="Tambah Metode Pembayaran"
                            android:textColor="@color/independece"
                            android:textSize="@dimen/normal_75"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_100"
                            android:fontFamily="sans-serif-medium"
                            android:text="Hubungkan Kartu Debit dan Sumber dana Lain"
                            android:textColor="@color/slateGray"
                            android:textSize="10dp"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/normal_150"
                        android:layout_marginTop="@dimen/normal_100"
                        android:layout_marginBottom="@dimen/normal_100"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_baseline_add_circle_outline_24" />

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="@dimen/large_125"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/normal_100"
                android:layout_marginBottom="@dimen/normal_100"
                android:layout_marginEnd="@dimen/large_150"
                android:adjustViewBounds="true"
                android:src="@drawable/duit" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/large_150"
                android:layout_marginTop="@dimen/normal_100"
                android:layout_marginBottom="@dimen/normal_100"
                android:adjustViewBounds="true"
                android:src="@drawable/dikemas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:fontFamily="sans-serif-medium"
                android:text="Belum Dibayar"
                android:textColor="@color/independece"
                android:textSize="13dp"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sedang Dikemas"
                android:textColor="@color/independece"
                android:textSize="13dp"
                tools:ignore="SpUsage" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_125"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/normal_100"
                android:layout_marginEnd="@dimen/large_150"
                android:layout_marginBottom="@dimen/normal_100"
                android:adjustViewBounds="true"
                android:src="@drawable/diantar" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/large_150"
                android:layout_marginTop="@dimen/normal_100"
                android:layout_marginBottom="@dimen/normal_100"
                android:adjustViewBounds="true"
                android:src="@drawable/star" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sedang Diantar"
                android:textColor="@color/independece"
                android:textSize="13dp"
                tools:ignore="SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:fontFamily="sans-serif-medium"
                android:text="Beri Penilaian"
                android:textColor="@color/independece"
                android:textSize="13dp"
                tools:ignore="SpUsage" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>